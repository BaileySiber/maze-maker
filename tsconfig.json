{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "noEmit": true,
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "target": "es5",
    "lib": ["es7", "dom", "esnext.asynciterable"],
    "jsx": "react",
    "sourceMap": true,
    "skipLibCheck": true,
    "downlevelIteration": true,
    "forceConsistentCasingInFileNames": true,
    "keyofStringsOnly": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "strict": true,
    "strictFunctionTypes": false, // (nsmall) FIXME
    "strictPropertyInitialization": false, // (nsmall) FIXME
    "suppressImplicitAnyIndexErrors": true,
    "paths": {
      "*": ["*", "src/*"]
    },
    "allowJs": true
  },
  "exclude": [
    "node_modules",
    "coverage",
    "build",
    "webpack",
    "jest",
    "public"
  ]
}
